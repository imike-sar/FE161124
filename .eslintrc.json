{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error",
            {
                "allow": ["warn", "error"]
            }
        ],
        "no-empty": [
            "error"
        ],
        "no-undef": [
            "error"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-var": [
            "error"
        ],
        "prefer-const": [
            "error"
        ]
    }
}
